{% extends "::base.html.twig" %}

{% block title %}s2todoBundle:Front:fiche{% endblock %}

{% block body %}
<div class="panel panel-primary">
    <div class="panel-heading">{{ event.date|date("m/d/Y H:i") }} - {{ event.title }}</div>
    <ul class="list-group">
        <li class="list-group-item">Adresse : {{ event.adress }}</li>
    </ul>
    <div class="panel-body">
        <p>{{ event.text }}</p>
    </div> 
    <ul class="list-group">
        {% if event.document is not empty %}
        <li class="list-group-item">
            Document : <a href="{{ asset(event.WebPath()) }}">{{ event.document }}</a>
        </li>
        {% endif %}
        <li class="list-group-item">
            Tags : 
            {% for tag in event.tags %}
                {{tag.name}}{% if loop.last == false %},{% endif %}
            {% endfor %}
        </li> 
    </ul>
</div>
{% endblock %}
